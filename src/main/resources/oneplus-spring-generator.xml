<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--Spring注入Generator-->
    <bean id="controllerGenerator" class="com.oneplus.mybatis.generat.core.impl.ControllerGenerator"/>
    <bean id="managerGenerator" class="com.oneplus.mybatis.generat.core.impl.ManagerGenerator"/>
    <bean id="oracleMapperGenerator" class="com.oneplus.mybatis.generat.core.impl.OracleMapperGenerator"/>
    <bean id="mapperGenerator" class="com.oneplus.mybatis.generat.core.impl.MapperGenerator"/>
    <bean id="modelGenerator" class="com.oneplus.mybatis.generat.core.impl.ModelGenerator"/>
    <bean id="resultGenerator" class="com.oneplus.mybatis.generat.core.impl.ResultGenerator"/>
    <bean id="serviceGenerator" class="com.oneplus.mybatis.generat.core.impl.ServiceGenerator"/>
    <bean id="domainGenerator" class="com.oneplus.mybatis.generat.core.impl.DomainGenerator"/>
    <bean id="voGenerator" class="com.oneplus.mybatis.generat.core.impl.VoGenerator"/>
    <bean id="jspGenerator" class="com.oneplus.mybatis.generat.core.impl.JspGenerator"/>


    <!--Spring facade-->
    <bean id="generatorFacade" class="com.oneplus.mybatis.generat.core.impl.GeneratorFacade">
        <property name="generatorMap">
            <map>
                <entry key="controller" value-ref="controllerGenerator"/>
                <entry key="manage" value-ref="managerGenerator"/>
                <entry key="mapper" value-ref="mapperGenerator"/>
                <entry key="oracle_mapper" value-ref="oracleMapperGenerator"/>
                <entry key="model" value-ref="modelGenerator"/>
                <entry key="result" value-ref="resultGenerator"/>
                <entry key="service" value-ref="serviceGenerator"/>
                <entry key="vo" value-ref="voGenerator"/>
                <entry key="domain" value-ref="domainGenerator"/>
                <entry key="jsp" value-ref="jspGenerator"/>
            </map>
        </property>
    </bean>

</beans>