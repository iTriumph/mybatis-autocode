package ${packageName}.service.exception;

import com.oneplus.common.exception.ErrorCode;
import org.apache.commons.lang3.StringUtils;

${classTitle}
public enum ${upClassName}ErrorCode implements ErrorCode {

    /** 系统异常 */
    SYSTEM_ERROR("SYSTEM_ERROR", "系统异常,请联系管理员"),

    /** 参数错误 */
    PARAM_ERROR("PARAM_ERROR", "参数异常"),

#foreach($allUpCaseCol in $allUpCaseCols)
    /** $remarkMap.get(${allUpCaseCol})为空 */
    ${noPrefixTableName}_${allUpCaseCol}_NULL("${noPrefixTableName}_${allUpCaseCol}_NULL", "$remarkMap.get(${allUpCaseCol})为空"),

#end
    ;

    /**
     * 错误码
     */
    private String code;

    /**
     * 描述
     */
    private String desc;

    ${upClassName}ErrorCode(String code, String desc) {
        this.code = code;
        this.desc = desc;
    }

    public static ${upClassName}ErrorCode getByType(String code) {
        if (StringUtils.isBlank(code))
            return null;

        for (${upClassName}ErrorCode errorCode : ${upClassName}ErrorCode.values()) {
            if (StringUtils.equals(code, errorCode.getCode())) {
                return errorCode;
            }
        }

        return null;
    }

    @Override
    public String getCode() {
        return code;
    }

    @Override
    public String getDesc() {
        return desc;
    }

}
